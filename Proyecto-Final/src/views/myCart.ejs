<button><a href="http://127.0.0.1:8080/home">Ir a Inicio</a></button>
<% if (cart) { %>
    <% if (addedProducts) { %>
            <% addedProducts.forEach(product => { %>
                <p><%= product.name %></p>
                <p>$<%= product.price %></p>
                <p>cantidad:--</p>
                <p><img src="http://localhost:8080/img/<%= product.image %>" class="img"></img></p>
                <button class="remove" id="<%= product.id %>" onclick="getID(this.id)">x</button>
                <% }) %>
        <% } else { %>
            <p>Tu carrito esta vacio.</p>
        <% } %>
<% } else { %>
    <div>
        <p>No existe un carrito.</p>
    </div>     
<% } %>

<script>
    const toRemove = ["remove"];

    function getID(valor){
        console.log(`Eliminado producto con id:${valor}`);
        toRemove.push(valor);
        console.log(toRemove);
        fetch('/myCart',{
            method:"POST",
            body:JSON.stringify(toRemove),
            headers:{
                "Content-Type": "application/json"
            }
        })
    }
</script>